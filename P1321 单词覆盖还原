#include<iostream>
#include<algorithm>
#include<cstring>
#include<cstdio>

using namespace std;

int main () {
	char a[300];
	int n, x = 0, y = 0, i;
	gets(a);
	n = strlen(a);
	for(i = 0; i <= n; i++) {
		if(a[i] == 'b' | a[i+1] == 'o' | a[i + 2] == 'y') {
			x++;
		} else if(a[i] == 'g' | a[i+1] == 'i' | a[i + 2] == 'r' | a[i + 3] == 'l') {
			y++;
		} 
	}
	cout << x << endl << y << endl;
	return 0;
} 
